<%= form_for(@product) do |f| %> 
  <%= f.label :name %>
  <%= f.text_field :name %>  <br /><br />

  <%= f.label :price %> 
  <%= f.number_field :price %> <br /> <br />

  <%= f.label :image_url %> 
  <%= f.text_field :image_url %>  <br /><br /> 
  
  <%= f.label :category %>
  <%= f.collection_select :category_id, Category.all, :id, :name %> 
  <br /><br />
  <%= f.submit %> 
<% end %>
