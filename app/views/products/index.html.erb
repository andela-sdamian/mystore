<%= form_tag products_path, method: :get do %>
  <%= text_field_tag :search, params[:search], placeholder: "Enter a keyword", size: 30 %> 
  <%= submit_tag :search, name: nil %> 
<% end %>


<br /><br /> 
<table cellpadding="3px" border="3px"> 
  <thead>
    <tr>
      <th><%= link_to "Name", "products?&name=name" %></th>
      <th><%= link_to "Price", "products?&price=price" %></th>
      <th>Category</th>
      <th colspan="3"></th>
   </tr>
  </thead>
  
  <tbody>
    <% @products.each do |product| %> 
      <tr>
        <td><%= product.name%></td>
        <td>$<%= product.price %></td>
        <td><%= product.category.name %></td>
        <td><%= link_to 'Show', product %> </a></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></a></td>
        <td><%= link_to 'Delete', product, method: :delete, data: {confirm: "Are you sure"} %></a></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br /><br />
<%= will_paginate @products %> 

<br /><br />
<%= link_to "Create New Product", new_product_path %> 

