 <tr>
                <td><%= listing.name %></td>
                <td><%= listing.description %></td>
                <td><%= listing.price %></td>
                <td><%= listing.image_url %></td>
                <td><%= listing.category.name %></td>
                <td> 
                  <%= link_to product_path(listing), class: "btn btn-info" do %> 
                      <span class="glyphicon glyphicon-eye-open"></span>
                  <% end %>
                </td>
                <td> 
                  <%= link_to edit_product_path(listing), class: "btn btn-warning" do %> 
                      <span class="glyphicon glyphicon-pencil"></span>
                  <% end %>
                </td>
                <td> 
                  <%= link_to listing, method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"} do %> 
                      <span class="glyphicon glyphicon-trash"></span>
                  <% end %>
                </td>
            </tr>
